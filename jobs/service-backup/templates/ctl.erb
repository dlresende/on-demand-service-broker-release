set -o pipefail

mkdir -p /var/vcap/sys/log/monit

exec 1>> /var/vcap/sys/log/monit/service-backup.log
exec 2>> /var/vcap/sys/log/monit/service-backup.err.log

log_facility=user
log_dir=/var/vcap/sys/log/service-backup

mkdir -p $log_dir
chown -R vcap:vcap $log_dir

script_log_tag=service-backup-ctl
script_log_file=$log_dir/ctl.log
backup_log_tag=service-backup
backup_log_file=$log_dir/out.log

pidfile=/var/vcap/sys/run/service-backup.pid

write_log() {
  local log_tag=$1
  local log_file=$2
  local log_level=$3
  logger --priority $log_facility.$log_level --tag $log_tag --stderr 2>> $log_file
}
export -f write_log

log() {
  local log_level=$1
  shift
  echo "$(date): $*" | write_log $script_log_tag $script_log_file $log_level
}
export -f log

backup_log() {
  local log_level=$1
  write_log $backup_log_tag $backup_log_file $log_level
}
export -f backup_log

case $1 in
  start)
    log info "start script: starting service-backup"
    echo $$ > $pidfile

    backup_user='<%= p('service-backup.backup_user') %>'

    <% if_p('service-backup.source_folder') do %>
      source_folder='<%= p('service-backup.source_folder') %>'
      mkdir -p "${source_folder}"
      chown -R "${backup_user}:${backup_user}" "$source_folder"
    <% end %>

    export GCP_SERVICE_ACCOUNT_FILE=/var/vcap/jobs/service-backup/config/gcp_service_account.json
    exec chpst -u "${backup_user}:${backup_user}" /var/vcap/packages/service-backup/bin/service-backup \
    /var/vcap/jobs/service-backup/config/backup.yml > >(backup_log info) 2>&1

    log info "start script: completed starting service-backup"
    ;;

  stop)
    log info "stop script: stopping service-backup"
    kill $(cat $pidfile)
    rm -f $pidfile
    log info "stop script: completed stopping service-backup"
    ;;

  *)
    log warning "operation '$1' is not supported"
    echo "Usage: ctl {start|stop}" >&2
    exit 1
    ;;

esac
